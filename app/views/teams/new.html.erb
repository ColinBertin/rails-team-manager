<div class="container">
  <div class="mt-5">
    <h1>Add your team</h1>
    <%= simple_form_for [ @sport, @team ] do |f| %>
      <%= f.input :name, placeholder: 'Name of the team' %>
      <%= f.input :gender, placeholder: 'Gender' %>
      <%= f.input :location, placeholder: 'Place' %>
      <%= f.submit class: 'button mt-2 wt-100' %>
    <% end %>
  </div>
</div>
