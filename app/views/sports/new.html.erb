<div class="container">
  <div class="mt-5">
    <div class = "card-no-hover p-4 m-4">
      <h1 class="mt-4 mb-4">Add a Sport</h1>
      <%= simple_form_for(@sport) do |f| %>
        <%= f.input :name, placeholder: 'Name of the sport' %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
      <%= link_to "cancel", :back, class: "btn btn-danger mt-4" %>
    </div>
  </div>
</div>
